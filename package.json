{
  "name": "tslint-nice",
  "version": "1.0.0",
  "description": "An extension of the tslint library adding better handling of multiple nested typescript projects and more human readable output.",
  "main": "bin/tslint-nice",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zane-c/tslint-nice.git"
  },
  "scripts": {
    "lint": "node ./tslint-nice",
    "lint:fix": "node ./tslint-nice --fix",
    "lint:all": "node ./tslint-nice --all",
    "lint:watch": ""
  },
  "keywords": [
    "tslint",
    "pretty",
    "multiple",
    "tsconfig",
    "clean",
    "simple",
    "watch"
  ],
  "author": "Zane Christenson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zane-c/tslint-nice/issues"
  },
  "homepage": "https://github.com/zane-c/tslint-nice#readme",
  "dependencies": {
    "colors": "^1.3.1",
    "globby": "^8.0.1",
    "nodemon": "^1.18.3",
    "tslint": "^5.11.0",
    "typescript": "^2.5.1"
  },
  "peerDependencies": {
    "typescript": ">= 2.5.x"
  }
}
